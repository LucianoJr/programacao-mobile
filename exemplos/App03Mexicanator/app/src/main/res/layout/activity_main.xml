<!-- xmlns: Define o namespace - onde o android deve buscar os componentes
        android: componentes padroes do android
        app: componentes de aplicacao
        tools: usado para visualizacao no modo design
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Componente para imagens -->
    <ImageView
        android:id="@+id/main_img_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_huge"
        android:contentDescription="@string/descr_logo"
        android:src="@drawable/logo"/>

    <!-- CTRL + ALT + L : Organiza o codigo -->
    <TextView
        android:id="@+id/main_txt_nomeapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"/>

    <!-- ALT + ENTER: Extract to string resource -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/main_edt_texto"
            android:imeOptions="actionDone"
            android:imeActionLabel="done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_texto"/>

    </LinearLayout>

    <Button
        android:id="@+id/main_btn_traduzir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_traduzir"/>

    <TextView
        android:id="@+id/main_txt_saida"
        tools:text="Texto de saida!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
