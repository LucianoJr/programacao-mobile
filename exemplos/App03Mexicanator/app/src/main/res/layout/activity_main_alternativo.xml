<?xml version="1.0" encoding="utf-8"?>
<!-- Serve para empilhar os componentes internos -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Composição da tela -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/main_btn_traduzir"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/main_img_logo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_huge"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/spacing_normal"
                    android:src="@drawable/logo"/>

                <TextView
                    android:id="@+id/main_txt_nomeapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/main_img_logo"
                    android:layout_centerHorizontal="true"
                    android:text="@string/app_name"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/main_layout_texto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/main_txt_nomeapp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/main_edt_texto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_margin="@dimen/spacing_normal"
                        android:hint="@string/label_texto"/>

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/main_txt_saida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/main_layout_texto"
                    android:layout_margin="@dimen/spacing_normal"
                    tools:text="Bla bla bla bla bla"/>

            </RelativeLayout>

        </ScrollView>

        <Button
            android:id="@+id/main_btn_traduzir"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/button_traduzir"/>
    </RelativeLayout>

    <!-- Tela de loading -->
    <RelativeLayout
        android:id="@+id/layout_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"/>

    </RelativeLayout>


</FrameLayout>
