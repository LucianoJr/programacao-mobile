<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ================================================================== -->
    <!-- REGIAO DOS DADOS ................................................. -->
    <!-- ================================================================== -->

    <!-- Nesta regiao sao declaradas as variaveis que serao importadas do
            codigo da activity -->
    <data/>

    <!-- ================================================================== -->
    <!-- REGIAO DO LAYOUT ................................................. -->
    <!-- ================================================================== -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"/>


            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/login_btn_semlogin"/>

            <!--<Button-->
                <!--android:id="@+id/login_btn_facebook"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_above="@+id/login_btn_semlogin"-->
                <!--android:text="@string/login_btn_facebook"/>-->

            <Button
                android:id="@+id/login_btn_semlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/login_btn_semlogin"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_layout_progress"
            android:visibility="gone"
            android:background="@android:color/background_light"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/login_progress_bar"
                android:indeterminate="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </FrameLayout>


</layout>
