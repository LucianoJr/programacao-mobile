<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- DADOS -->
    <data>
        <variable
            name="estado"
            type="br.com.utp.brothersnetworks.models.Estado"/>
    </data>

    <!-- Layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_feed_fotourl"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_margin="16dp"
                android:src="@drawable/ic_usuario"/>

            <TextView
                android:id="@+id/item_feed_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/item_feed_fotourl"
                android:layout_marginEnd="16dp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/item_feed_fotourl"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{estado.estado}"
                tools:text="Homer Simpson de alcantara fagundes bond de menezes"/>

            <TextView
                android:id="@+id/item_feed_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_feed_nome"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/item_feed_fotourl"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{estado.pais}"
                tools:text="email@email"/>

            <TextView
                android:id="@+id/item_feed_maior_cidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_feed_email"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/item_feed_fotourl"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{estado.maiorCidade}"
                tools:text="email@email"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</layout>
